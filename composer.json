{
    "name": "focus-cms/composer-focus-theme-installer",
    "description": "Composer installer plugin for Focus CMS themes.",
    "type": "composer-plugin",
    "license": "MIT",

    "authors": [
        {
            "name": "Istv√°n Hatala"
        }
    ],

    "require": {
        "php": "^8.1",
        "composer-plugin-api": "^2.0"
    },

    "autoload": {
        "psr-4": {
            "FocusCMS\\ComposerThemeInstaller\\": "src/"
        }
    },

    "extra": {
        "class": "FocusCMS\\ComposerThemeInstaller\\Plugin"
    },

    "minimum-stability": "dev",
    "prefer-stable": true,

    "config": {
        "allow-plugins": {
            "focus-cms/composer-focus-theme-installer": true
        }
    }
}